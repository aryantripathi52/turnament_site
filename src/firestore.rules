rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- User Profile Rules ---
    match /users/{userId} {
      // A user can create their own profile.
      allow create: if request.auth != null && request.auth.uid == userId;
      // A user can always read their own profile. This is crucial for role-checks.
      // Admins can read any user's profile.
      allow read: if (request.auth != null && request.auth.uid == userId) || (request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2');
      // A user can update their own profile. Admins can update any user's profile.
      allow update: if (request.auth != null && request.auth.uid == userId) || (request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2');

      // Rules for user sub-collections
      match /joinedTournaments/{tournamentId} {
        allow read, write, list: if request.auth != null && request.auth.uid == userId;
      }
       match /wonTournaments/{tournamentId} {
        allow read, list: if request.auth != null && request.auth.uid == userId;
      }
       match /addCoinRequests/{requestId} {
        allow read, write, list: if request.auth != null && request.auth.uid == userId;
      }
       match /withdrawCoinRequests/{requestId} {
        allow read, write, list: if request.auth != null && request.auth.uid == userId;
      }
    }

    // --- Tournament Rules ---
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow create, delete: if request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
      
      allow update: if (request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredCount'])) || request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';

      match /registrations/{registrationId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      }
    }
    
    // --- Game Category Rules ---
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // --- GLOBAL ADMIN COLLECTIONS ---
    match /addCoinRequests/{requestId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow read, write, list: if request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }
    
    match /withdrawCoinRequests/{requestId} {
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        allow read, write, list: if request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // --- Public, Read-Only Collections ---
    match /announcements/{announcementId} {
      allow read: if true;
    }
     match /highlights/{highlightId} {
      allow read: if true;
    }
  }
}
