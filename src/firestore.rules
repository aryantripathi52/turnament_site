
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Correctly and safely get the role of the currently signed-in user.
    // This is the most critical helper function.
    function getUserRole() {
        // Use exists() to avoid errors on non-existent documents, which can happen during signup
        // or if the user profile creation is delayed.
        if (exists(/databases/$(database)/documents/users/$(request.auth.uid))) {
            return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
        }
        // If the user document doesn't exist, they have no specific role.
        return null;
    }
    
    function isAdmin() {
      return isSignedIn() && getUserRole() == 'admin';
    }

    function isStaff() {
      return isSignedIn() && getUserRole() == 'staff';
    }
    
    // Check if the signed-in user is an Admin or Staff. This simplifies many rules.
    function isStaffOrAdmin() {
      let role = getUserRole();
      return isSignedIn() && (role == 'admin' || role == 'staff');
    }

    // --- Collection Rules ---

    // USER DATA: Users can only manage their own data. Admins/Staff can read any user profile for management.
    match /users/{userId} {
      allow get: if isOwner(userId) || isStaffOrAdmin();
      allow list: if isStaffOrAdmin(); // Only admins/staff can list all users.
      allow create: if isOwner(userId); // A user can create their own profile document.
      allow update, delete: if isOwner(userId) || isAdmin(); // Only a user or an admin can modify/delete a profile.

      // Denormalized data subcollections for users.
      match /joinedTournaments/{tournamentId} {
        // A user can read and write their own records of joined tournaments.
        allow read, write: if isOwner(userId);
        // Admins/Staff can view for management purposes.
        allow list: if isOwner(userId) || isStaffOrAdmin();
      }
      match /wonTournaments/{tournamentId} {
        // A user can read the tournaments they have won.
        allow read, list: if isOwner(userId) || isStaffOrAdmin();
        // Only Admin/Staff can write to this collection to award prizes.
        allow write: if isStaffOrAdmin();
      }
    }

    // TOURNAMENTS & CATEGORIES: Publicly readable, but only modifiable by staff/admins.
    match /tournaments/{tournamentId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin();

      // Registrations are readable by any signed-in user so they can see who has joined.
      match /registrations/{registrationId} {
        allow read, list: if isSignedIn();
        // A player can create their own registration.
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // Only an admin/staff can delete a registration.
        allow delete: if isStaffOrAdmin();
        // Updates are disallowed to prevent tampering.
        allow update: if false;
      }
    }

    match /categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin();
    }

    // ANNOUNCEMENTS & HIGHLIGHTS: Publicly readable, modifiable by staff/admins.
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin();
    }

    match /highlights/{highlightId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin();
    }
    
    // ADD COIN REQUESTS: Players create for themselves. Staff/Admins manage.
    match /addCoinRequests/{requestId} {
      // A player can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Players can read THEIR OWN requests to check status, but cannot list all requests.
      allow get: if isOwner(request.resource.data.userId) || isStaffOrAdmin();
      // Admins/Staff have full read/write access to all requests.
      allow list, update, delete: if isStaffOrAdmin();
    }

    // WITHDRAW COIN REQUESTS: Players create for themselves. Staff/Admins manage.
    match /withdrawCoinRequests/{requestId} {
      // A player can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
       // Players can read THEIR OWN requests to check status, but cannot list all requests.
      allow get: if isOwner(request.resource.data.userId) || isStaffOrAdmin();
      // Admins/Staff have full read/write access to all requests.
      allow list, update, delete: if isStaffOrAdmin();
    }
  }
}
