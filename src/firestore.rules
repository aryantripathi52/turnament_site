rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /addCoinRequests/{id} {
      allow read, write, list: if request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }
    match /withdrawCoinRequests/{id} {
      allow read, write, list: if request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }
    match /users/{id} {
      allow read, write: if request.auth != null && (request.auth.uid == id || request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2');
       
      match /joinedTournaments/{tournamentId} {
        allow read, write, list: if request.auth != null && request.auth.uid == id;
      }
       match /wonTournaments/{tournamentId} {
        allow read, list: if request.auth != null && request.auth.uid == id;
      }
       match /addCoinRequests/{requestId} {
        allow read, write, list: if request.auth != null && request.auth.uid == id;
      }
       match /withdrawCoinRequests/{requestId} {
        allow read, write, list: if request.auth != null && request.auth.uid == id;
      }
    }

    // --- Tournament Rules ---
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow create, delete: if request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
      
      allow update: if (request.auth != null && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredCount'])) || request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';

      match /registrations/{registrationId} {
        allow read, list: if request.auth != null;
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      }
    }
    
    // --- Game Category Rules ---
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // --- Public, Read-Only Collections ---
    match /announcements/{announcementId} {
      allow read: if true;
    }
     match /highlights/{highlightId} {
      allow read: if true;
    }
  }
}
