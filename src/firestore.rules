rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isAdmin(userId) {
      return getUserRole(userId) == 'admin';
    }

    function isStaff(userId) {
      return getUserRole(userId) == 'staff';
    }
    
    function isStaffOrAdmin(userId) {
      let role = getUserRole(userId);
      return role == 'admin' || role == 'staff';
    }

    // --- Collection Rules ---

    // USER DATA: Users can manage their own data. Admins/Staff can read any profile.
    match /users/{userId} {
      allow read: if isOwner(userId) || isStaffOrAdmin(request.auth.uid);
      allow list: if isStaffOrAdmin(request.auth.uid); 
      allow create: if isOwner(userId);
      
      // Allow user to update their own username.
      // Allow updating 'coins' if it's part of a transaction.
      // Admins can update any profile.
      allow update: if (isOwner(userId) && (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['username']) || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['coins'])))
                    || isStaffOrAdmin(request.auth.uid);

      // Denormalized data subcollections for users.
      match /joinedTournaments/{tournamentId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
      match /wonTournaments/{tournamentId} {
        allow read, list: if isOwner(userId) || isStaffOrAdmin(request.auth.uid);
        allow write, create, delete: if isStaffOrAdmin(request.auth.uid); // Only staff/admin can award a win
      }
      
      match /addCoinRequests/{requestId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
      match /withdrawCoinRequests/{requestId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
    }

    // TOURNAMENTS: Publicly readable. Modifiable by staff/admins.
    match /tournaments/{tournamentId} {
      allow get, list: if isSignedIn();
      allow create, delete: if isStaffOrAdmin(request.auth.uid);

      // Allow staff/admins to update anything.
      // Allow any signed-in user to ONLY update 'registeredCount' (for joining).
      allow update: if isStaffOrAdmin(request.auth.uid) || 
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredCount']));

      match /registrations/{registrationId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isStaffOrAdmin(request.auth.uid);
      }
    }

    match /categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);
    }

    // ANNOUNCEMENTS & HIGHLIGHTS: Publicly readable, modifiable by staff/admins.
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);
    }

    match /highlights/{highlightId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);
    }
    
    // GLOBAL COIN REQUESTS (for Admin/Staff review)
    match /addCoinRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read, list, update, delete: if isStaffOrAdmin(request.auth.uid);
    }

    match /withdrawCoinRequests/{requestId} {
       allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
       allow read, list, update, delete: if isStaffOrAdmin(request.auth.uid);
    }
  }
}
