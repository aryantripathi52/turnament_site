rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isAdmin() {
      let userRole = getUserRole(request.auth.uid);
      // Hardcoded admin email for superuser access
      return userRole == 'admin' || request.auth.token.email == 'admin@dps.in';
    }

    function isStaff() {
      return getUserRole(request.auth.uid) == 'staff';
    }
    
    function isStaffOrAdmin() {
      let role = getUserRole(request.auth.uid);
      // Hardcoded admin email for superuser access
      return role == 'admin' || role == 'staff' || request.auth.token.email == 'admin@dps.in';
    }

    // --- Collection Rules ---

    // USER DATA: Users can manage their own data. Admins/Staff can read/update any profile.
    match /users/{userId} {
      allow read: if isOwner(userId) || isStaffOrAdmin();
      allow list: if isStaffOrAdmin(); 
      allow create: if isOwner(userId);
      
      // Allow user to update own username.
      // Allow staff/admin to update coins (via transactions).
      // Allow staff/admin to update any profile fully.
      allow update: if (isOwner(userId) && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['username']))
                    || isStaffOrAdmin();

      // Denormalized data subcollections for users.
      match /joinedTournaments/{tournamentId} {
        allow read, list, create, update, delete: if isOwner(userId);
      }
      match /wonTournaments/{tournamentId} {
        allow read, list: if isOwner(userId) || isStaffOrAdmin();
        allow write, create, delete: if isStaffOrAdmin();
      }
      
      match /addCoinRequests/{requestId} {
        allow read, list, create: if isOwner(userId);
        allow update: if isOwner(userId) || isStaffOrAdmin(); // Allow staff/admin to update status
      }
      match /withdrawCoinRequests/{requestId} {
        allow read, list, create: if isOwner(userId);
        allow update: if isOwner(userId) || isStaffOrAdmin();
      }
    }

    // TOURNAMENTS: Publicly readable. Modifiable by staff/admins.
    match /tournaments/{tournamentId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaffOrAdmin();

      // Allow any signed-in user to ONLY update 'registeredCount' (for joining).
      allow update: if isStaffOrAdmin() || 
                      (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['registeredCount']));

      match /registrations/{registrationId} {
        allow read, list: if isStaffOrAdmin(); // Only staff/admin can see full registration list
        allow get: if isOwner(request.resource.data.userId); // User can get their own registration
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isStaffOrAdmin();
      }
    }

    match /categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaffOrAdmin();
    }

    // ANNOUNCEMENTS & HIGHLIGHTS: Publicly readable, modifiable by staff/admins.
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin();
    }

    match /highlights/{highlightId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin();
    }
    
    // GLOBAL COIN REQUESTS (for Admin/Staff review)
    match /addCoinRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Admins and Staff can read, list, update, and delete requests.
      allow read, list, update, delete: if isStaffOrAdmin();
    }

    match /withdrawCoinRequests/{requestId} {
       allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
       // Admins and Staff can read, list, update, and delete requests.
       allow read, list, update, delete: if isStaffOrAdmin();
    }
  }
}
