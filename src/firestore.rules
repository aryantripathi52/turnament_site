
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }
    
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin(userId) {
      return getRole(userId) == 'admin';
    }


    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /joinedTournaments/{tournamentId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /tournaments/{tournamentId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn() && isAdmin(request.auth.uid);
    }

    match /tournaments/{tournamentId}/registrations/{registrationId} {
      function isCreatingTeamMember() {
        return isSignedIn() && request.auth.uid in request.resource.data.playerIds;
      }
      function isExistingTeamMember() {
        return isSignedIn() && isExistingDoc() && request.auth.uid in resource.data.playerIds;
      }
      
      allow get: if isExistingTeamMember() || (isSignedIn() && isAdmin(request.auth.uid));

      allow create: if isCreatingTeamMember() && request.resource.data.tournamentId == tournamentId;
      allow update: if isExistingTeamMember() && request.resource.data.tournamentId == resource.data.tournamentId;
      allow delete: if isExistingTeamMember() || (isSignedIn() && isAdmin(request.auth.uid));
    }

    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /highlights/{highlightId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    match /coinRequests/{coinRequestId} {
      // Admins can list all requests.
      // Players can only list their own requests.
      allow list: if isSignedIn() && (isAdmin(request.auth.uid) || request.query.where.userId == request.auth.uid);
      
      // Admins and the user who made the request can get it.
      allow get: if isSignedIn() && (isAdmin(request.auth.uid) || isOwner(resource.data.userId));
      
      // Admins can update/delete any request.
      allow update, delete: if isSignedIn() && isAdmin(request.auth.uid);
      
      // A user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /categories/{categoryId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn() && isAdmin(request.auth.uid);
    }
  }
}
