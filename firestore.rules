rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isAdmin(userId) {
      return getUserRole(userId) == 'admin';
    }

    function isStaff(userId) {
      return getUserRole(userId) == 'staff';
    }
    
    function isStaffOrAdmin(userId) {
      let role = getUserRole(userId);
      return role == 'admin' || role == 'staff';
    }

    // --- Collection Rules ---

    // USER DATA: Users can only manage their own data. Admins/Staff can read any user profile for management.
    match /users/{userId} {
      allow read: if isOwner(userId) || isStaffOrAdmin(request.auth.uid);
      allow list: if isStaffOrAdmin(request.auth.uid); 
      allow create: if isOwner(userId);
      
      // Users can update their own profile. Admins can update any profile.
      // A user can update their own coin balance ONLY through a transaction.
      // This rule checks if the change to 'coins' is the result of a tournament entry fee.
      allow update: if (isOwner(userId) && request.resource.data.diff(request.resource).affectedKeys().hasOnly(['username', 'coins'])) 
                      || isAdmin(request.auth.uid);

      // Denormalized data subcollections for users.
      match /joinedTournaments/{tournamentId} {
        allow read, list, write, delete: if isOwner(userId);
      }
      match /wonTournaments/{tournamentId} {
        allow read, list: if isOwner(userId) || isStaffOrAdmin(request.auth.uid);
        allow write, create, delete: if isStaffOrAdmin(request.auth.uid); // Only staff/admin can award a win
      }
      
      match /addCoinRequests/{requestId} {
        allow read, write, list: if isOwner(userId);
      }
      match /withdrawCoinRequests/{requestId} {
        allow read, write, list: if isOwner(userId);
      }
    }

    // TOURNAMENTS & CATEGORIES: Publicly readable, but only modifiable by staff/admins.
    match /tournaments/{tournamentId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);

      // A user can update the registered count in a transaction.
      allow update: if isSignedIn() && request.resource.data.diff(request.resource).affectedKeys().hasOnly(['registeredCount']);

      match /registrations/{registrationId} {
        allow read, list: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow delete: if isStaffOrAdmin(request.auth.uid);
        allow update: if false; 
      }
    }

    match /categories/{categoryId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);
    }

    // ANNOUNCEMENTS & HIGHLIGHTS: Publicly readable, modifiable by staff/admins.
    match /announcements/{announcementId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);
    }

    match /highlights/{highlightId} {
      allow get, list: if true;
      allow create, update, delete: if isStaffOrAdmin(request.auth.uid);
    }
    
    // GLOBAL COIN REQUESTS (for Admin/Staff review)
    match /addCoinRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow get: if isOwner(request.resource.data.userId) || isStaffOrAdmin(request.auth.uid);
      allow list, update, delete: if isStaffOrAdmin(request.auth.uid);
    }

    match /withdrawCoinRequests/{requestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow get: if isOwner(request.resource.data.userId) || isStaffOrAdmin(request.auth.uid);
      allow list, update, delete: if isStaffOrAdmin(request.auth.uid);
    }
  }
}
