rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper to check for staff/admin roles
    function isStaffOrAdmin() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      return request.auth != null && exists(userPath) && 
             (get(userPath).data.get('role', 'player') in ['staff', 'admin']);
    }

    // 1. ADMIN MASTER KEY
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // 2. USER PROFILES (Critical for Transaction 'get' and 'update')
    match /users/{userId} {
      allow get, read, update, write: if request.auth != null && request.auth.uid == userId;
      
      // Matches your joinedTournaments subcollection
      match /{allSubcollections=**} {
        allow read, get, list, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. TOURNAMENT LOGIC
    match /tournaments/{tournamentId} {
      allow read, get: if true; // Publicly readable for the transaction to check slots
      
      // Allow players to update the 'registeredCount' during join
      allow update: if request.auth != null; 
      allow create, delete: if isStaffOrAdmin();

      match /registrations/{registrationId} {
        // Player creates a doc named after their UID
        allow create, read, get, list: if request.auth != null && (registrationId == request.auth.uid || isStaffOrAdmin());
      }
    }

    // 4. CATEGORIES & REQUESTS
    match /categories/{categoryId} {
      allow read, get: if true;
      allow write: if isStaffOrAdmin();
    }

    match /addCoinRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isStaffOrAdmin();
    }
    
    match /withdrawCoinRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isStaffOrAdmin();
    }
  }
}
