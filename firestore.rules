rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for staff or admin roles
    function isStaffOrAdmin() {
      let userPath = /databases/$(database)/documents/users/$(request.auth.uid);
      // Use exists() to prevent crashing if the user doc is missing
      return request.auth != null && exists(userPath) && (get(userPath).data.get('role', 'player') in ['staff', 'admin']);
    }

    // 1. ADMIN MASTER KEY: Grants the admin full access to the entire database.
    match /{document=**} {
      allow read, write, list: if request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // 2. PLAYER PROFILE GATE: Allows any authenticated user to read and write to their own profile.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allows players to read/list their own private subcollections.
    match /users/{userId}/{subcollection}/{docId} {
      allow create, read, list, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // 3. TOURNAMENT JOIN LOGIC (RELAXED FOR DEBUGGING)
    match /tournaments/{tournamentId} {
        allow read: if true; // Everyone can read tournaments
        
        // Staff/Admin can create, update, delete tournaments.
        allow create, delete: if isStaffOrAdmin();
        
        // Allow any authenticated user to update a tournament (for joining)
        allow update: if request.auth != null;
        
        // Staff can see all registrations for management purposes.
        match /registrations/{registrationId} {
          // Allow any logged-in user to list/read registrations to fix the query error
          allow read, list: if request.auth != null;
          // Only allow a user to create their own registration doc
          allow create: if request.auth != null && request.auth.uid == registrationId;
        }
    }

    // Allow a user to create their own registration document within a tournament's subcollection.
    // This is covered by the rule above now, but keeping for reference if needed later.
    // match /tournaments/{tournamentId}/registrations/{userId} {
    //   allow create, read: if request.auth != null && request.auth.uid == userId;
    // }
    
    // Public read access for categories
    match /categories/{categoryId} {
        allow read: if true;
        allow write: if isStaffOrAdmin(); // Staff/Admin can manage categories
    }

    // 4. COIN REQUEST LOGIC (ADMIN & STAFF):
    // Staff/Admin can list all requests. Players can only create their own.
    match /addCoinRequests/{requestId} {
      allow list, read: if isStaffOrAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isStaffOrAdmin();
    }

    match /withdrawCoinRequests/{requestId} {
      allow list, read: if isStaffOrAdmin();
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isStaffOrAdmin();
    }
  }
}
