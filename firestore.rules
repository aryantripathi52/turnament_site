rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Admin check
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // 1. GLOBAL ADMIN ACCESS
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // 2. USER PROFILES
    match /users/{userId} {
      // Transaction MUST have 'get' to read coin balance
      allow get, read, update: if request.auth != null && request.auth.uid == userId;
      
      // Allow recursive access to joinedTournaments subcollections
      match /{allSubcollections=**} {
        allow read, get, list, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. TOURNAMENT & REGISTRATION LOGIC
    match /tournaments/{tournamentId} {
      allow read, get: if true; 
      
      // Allow players to increment registeredCount
      allow update: if request.auth != null;

      match /registrations/{registrationId} {
        // Player must be able to 'list' and 'get' their own registration
        allow create, get, read, list: if request.auth != null && (registrationId == request.auth.uid || isAdmin());
      }
    }

    // 4. CATEGORIES
    match /categories/{categoryId} {
      allow read, get: if true;
    }
  }
}
