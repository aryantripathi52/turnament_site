rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Admin check by role
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper: Staff or Admin check by role
    function isStaffOrAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }

    // 1. GLOBAL ADMIN ACCESS
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // 2. USER PROFILES & SUBCOLLECTIONS
    match /users/{userId} {
      // User can manage their own profile and subcollections
      allow get, read, update: if request.auth != null && request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, get, list, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. TOURNAMENTS & REGISTRATIONS
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow create, update, delete: if isStaffOrAdmin();

      match /registrations/{registrationId} {
        allow create, get, read, list: if request.auth != null;
      }
    }

    // 4. CATEGORIES
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isStaffOrAdmin();
    }

    // 5. COIN REQUESTS (for Staff & Admin)
    match /addCoinRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, list, update: if isStaffOrAdmin();
    }
    match /withdrawCoinRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, list, update: if isStaffOrAdmin();
    }
  }
}
