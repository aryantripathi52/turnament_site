
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) || isSignedIn(); // TEMPORARY: Allow any signed in user to update
      allow delete: if isOwner(userId) || isSignedIn(); // TEMPORARY: Allow any signed in user to delete
    }

    match /tournaments/{tournamentId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /tournaments/{tournamentId}/registrations/{registrationId} {
      function isCreatingTeamMember() {
        return isSignedIn() && request.auth.uid in request.resource.data.playerIds;
      }
      function isExistingTeamMember() {
        return isSignedIn() && isExistingDoc() && request.auth.uid in resource.data.playerIds;
      }

      allow get: if isExistingTeamMember() || isSignedIn();
      allow list: if isSignedIn();
      allow create: if isCreatingTeamMember() && request.resource.data.tournamentId == tournamentId;
      allow update: if isExistingTeamMember() && request.resource.data.tournamentId == resource.data.tournamentId;
      allow delete: if isExistingTeamMember() || isSignedIn();
    }

    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn();
    }

    match /highlights/{highlightId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    match /coinRequests/{coinRequestId} {
      // Temporarily allowing any signed-in user to perform admin actions to unblock development.
      allow list, get, update, delete: if isSignedIn();
      
      // A user can create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    match /categories/{categoryId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isSignedIn(); // For now, any signed-in user can manage categories
    }

    match /teams/{teamId} {
      function isTeamOwner(team) {
        return isSignedIn() && request.auth.uid == team.data.ownerId;
      }
      function isTeamMember(team) {
         return isSignedIn() && request.auth.uid in team.data.members;
      }
      allow get: if isTeamMember(resource);
      allow create: if isSignedIn() 
                    && request.resource.data.ownerId == request.auth.uid
                    && request.auth.uid in request.resource.data.members;
      allow update: if isTeamOwner(resource); // Owner can update (e.g. invite)
      allow delete: if isTeamOwner(resource);
    }

    match /users/{userId}/teamInvitations/{invitationId} {
      allow list, get: if isOwner(userId); // User can see their own invitations
      allow create: if isSignedIn(); // Any signed-in user can send an invite
      allow update, delete: if isOwner(userId); // User can accept/decline/delete their own invites
    }
  }
}
