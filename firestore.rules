rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ADMIN GLOBAL OVERRIDE: Grants the specified UID full access to everything.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // USER-SPECIFIC RULES:
    // Allows users to read and write their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write to their own subcollections.
    match /users/{userId}/{collection}/{docId} {
      allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // GLOBAL REQUEST COLLECTIONS (FOR ADMINS):
    // Players can create requests, but cannot read or list the global collection.
    // The admin's global override rule grants them the necessary access.
    match /addCoinRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    match /withdrawCoinRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    // Public collections (if any) can be defined below.
    match /tournaments/{tournamentId} {
        allow read: if request.auth != null;
    }
    
    match /categories/{categoryId} {
        allow read: if request.auth != null;
    }
  }
}