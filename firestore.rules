
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingDoc() {
      return resource != null;
    }
    
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }

    function isAdmin() {
      return isSignedIn() && getRole(request.auth.uid) == 'admin';
    }


    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);

      match /joinedTournaments/{tournamentId} {
          allow read, write, delete: if isOwner(userId);
      }
      match /wonTournaments/{tournamentId} {
          allow list, read, write: if isOwner(userId) || isAdmin();
      }
    }

    match /tournaments/{tournamentId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /tournaments/{tournamentId}/registrations/{registrationId} {
      function isCreatingTeamMember() {
        return isSignedIn() && request.resource.data.userId == request.auth.uid;
      }
      function isExistingTeamMember() {
        return isSignedIn() && isExistingDoc() && resource.data.userId == request.auth.uid;
      }
      
      allow read, list: if isSignedIn();

      allow create: if isCreatingTeamMember() && request.resource.data.tournamentId == tournamentId;
      allow update: if isExistingTeamMember() && request.resource.data.tournamentId == resource.data.tournamentId;
      allow delete: if isExistingTeamMember() || isAdmin();
    }

    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }

    match /highlights/{highlightId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin();
    }
    
    match /addCoinRequests/{requestId} {
      // Admins can get/update/delete any single document.
      allow get, update, delete: if isAdmin();
      // Admins can list documents only if they query by the 'status' field.
      allow list: if isAdmin() && request.query.keys().hasOnly(['where', 'limit']) && 'status' in request.query.where;
      // A player can only create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // A player can only list/get their own requests, by querying for their userId.
      allow list, get: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }

    match /withdrawCoinRequests/{requestId} {
      // Admins can get/update/delete any single document.
      allow get, update, delete: if isAdmin();
      // Admins can list documents only if they query by the 'status' field.
      allow list: if isAdmin() && request.query.keys().hasOnly(['where', 'limit']) && 'status' in request.query.where;
      // A player can only create a request for themselves.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // A player can only list/get their own requests, by querying for their userId.
      allow list, get: if isSignedIn() && request.query.where.userId == request.auth.uid;
    }

    match /categories/{categoryId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isAdmin(); 
    }
  }
}
