rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper for admin
    function isAdmin() {
      return request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // 1. ADMIN MASTER
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // 2. USER PROFILES
    // Transaction needs 'get' to check coins
    match /users/{userId} {
      allow get, read, update, write: if request.auth != null && request.auth.uid == userId;
      
      // Subcollections like 'joinedTournaments'
      match /{allSubcollections=**} {
        allow read, write, get, list: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. TOURNAMENT LOGIC
    match /tournaments/{tournamentId} {
      // Transaction needs 'get' to check registeredCount and entryFee
      allow get, read: if true; 
      
      // Allow the transaction to update the registeredCount
      allow update: if request.auth != null;

      allow create, delete: if request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'player') in ['staff', 'admin'];

      match /registrations/{registrationId} {
        // Player must be able to create and verify their own registration
        allow create, get, read, list: if request.auth != null && (registrationId == request.auth.uid || isAdmin());
      }
    }

    // 4. CATEGORIES & REQUESTS
    match /categories/{categoryId} {
      allow get, read: if true;
    }

    match /addCoinRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isAdmin();
    }
    
    match /withdrawCoinRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isAdmin();
    }
  }
}
