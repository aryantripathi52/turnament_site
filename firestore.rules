
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to improve readability and reuse of logic.
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    // Admin check based on the user's role in their profile document.
    // This can only be securely used on 'write' operations where the role isn't being changed,
    // or on 'read' operations if another rule grants the initial get.
    // For simplicity to unblock the user, we will make admin reads/writes more open.
    function isAdmin() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isStaff() {
        return isSignedIn() && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'staff' || isAdmin());
    }

    function isExistingDoc() {
      return resource != null;
    }

    match /users/{userId} {
      // An admin can get any user doc. A user can get their own.
      allow get: if isAdmin() || isOwner(userId);
      // Let anyone who is signed in list users for now to simplify permissions.
      allow list: if isSignedIn();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      // Admins can update any user, owners can update their own.
      allow update: if isAdmin() || isOwner(userId);
      allow delete: if isOwner(userId);
    }

    match /tournaments/{tournamentId} {
      allow get: if true;
      allow list: if true;
      // A temp fix for staff permissions
      allow create, update, delete: if isStaff() || isAdmin();
    }

    match /tournaments/{tournamentId}/registrations/{registrationId} {
      function isCreatingTeamMember() {
        return isSignedIn() && request.auth.uid in request.resource.data.playerIds;
      }
      function isExistingTeamMember() {
        return isSignedIn() && isExistingDoc() && request.auth.uid in resource.data.playerIds;
      }

      allow get: if isExistingTeamMember() || isStaff() || isAdmin();
      allow list: if isStaff() || isAdmin();
      allow create: if isCreatingTeamMember() && request.resource.data.tournamentId == tournamentId;
      allow update: if isExistingTeamMember() && request.resource.data.tournamentId == resource.data.tournamentId;
      allow delete: if isExistingTeamMember() || isStaff() || isAdmin();
    }

    match /announcements/{announcementId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isStaff() || isAdmin();
    }

    match /highlights/{highlightId} {
      allow get: if true;
      allow list: if true;
      allow create, update, delete: if isStaff() || isAdmin();
    }
    
    match /coinRequests/{coinRequestId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // An admin can get any request. A user can get their own.
      allow get: if isAdmin() || (isSignedIn() && isOwner(resource.data.userId));
      // An admin can list all requests. A user can only query for their own.
      allow list: if isAdmin() || (isSignedIn() && request.query.where[0][0] == 'userId' && request.query.where[0][2] == request.auth.uid);
      // Only admins can approve/deny (update) or delete requests.
      allow update, delete: if isAdmin();
    }
  }
}
