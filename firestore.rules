rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Admin check by role
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper: Staff or Admin check by role
    function isStaffOrAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['staff', 'admin'];
    }

    // 1. GLOBAL ADMIN ACCESS
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // 2. USER PROFILES & SUBCOLLECTIONS
    match /users/{userId} {
      // A user can manage their own profile. A staff/admin can also update it.
      allow get, read: if request.auth != null && request.auth.uid == userId;
      allow update: if (request.auth != null && request.auth.uid == userId) || isStaffOrAdmin();
      
      // A user has full control over their own subcollections.
      // Staff/Admins also have full control for managing tournament results.
      match /{allSubcollections=**} {
        allow read, get, list, write: if (request.auth != null && request.auth.uid == userId) || isStaffOrAdmin();
      }
    }

    // 3. TOURNAMENTS & REGISTRATIONS
    match /tournaments/{tournamentId} {
      allow read: if true;
      // Allow any logged-in user to update (for joining).
      // Allow staff/admin to create, update, and delete.
      allow update: if request.auth != null;
      allow create, delete: if isStaffOrAdmin();

      match /registrations/{registrationId} {
        allow create, get, read, list: if request.auth != null;
      }
    }

    // 4. CATEGORIES
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isStaffOrAdmin();
    }

    // 5. COIN REQUESTS (for Staff & Admin)
    match /addCoinRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, list, update: if isStaffOrAdmin();
    }
    match /withdrawCoinRequests/{requestId} {
        allow create: if request.auth != null;
        allow read, list, update: if isStaffOrAdmin();
    }
  }
}
