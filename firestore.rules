rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isStaffOrAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('role', 'player') in ['staff', 'admin'];
    }

    // 1. ADMIN MASTER KEY
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == 'QNH804sx9uO9KpGQYUfQ9BU6CKF2';
    }

    // 2. USER PROFILES & SUBCOLLECTIONS
    match /users/{userId} {
      allow read, write, update: if request.auth != null && request.auth.uid == userId;
      
      match /{allSubcollections=**} {
        allow read, write, list: if request.auth != null && request.auth.uid == userId;
      }
    }

    // 3. TOURNAMENT LOGIC
    match /tournaments/{tournamentId} {
      allow read: if true;
      allow update: if request.auth != null; // Simplified to allow the batch to pass
      allow create, delete: if isStaffOrAdmin();

      match /registrations/{registrationId} {
        // Allows player to create their own registration and list it
        allow create, read, list: if request.auth != null && (registrationId == request.auth.uid || isStaffOrAdmin());
      }
    }

    // 4. CATEGORIES & REQUESTS
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isStaffOrAdmin();
    }

    match /addCoinRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isStaffOrAdmin();
    }

    match /withdrawCoinRequests/{requestId} {
      allow create: if request.auth != null;
      allow read, list, update: if isStaffOrAdmin();
    }
  }
}
